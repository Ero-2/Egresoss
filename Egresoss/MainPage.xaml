<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Egresoss.MainPage"
             xmlns:viewModels="clr-namespace:Egresoss.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#6366F1</Color>
            <Color x:Key="Success">#10B981</Color>
            <Color x:Key="Danger">#EF4444</Color>
            <Color x:Key="Background">#F5F7FA</Color>
            <Color x:Key="Surface">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#1E293B</Color>
            <Color x:Key="TextSecondary">#64748B</Color>

            <Style TargetType="Border" x:Key="CardStyle">
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Surface}"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="16"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Shadow">
                    <Shadow Brush="#20000000" Offset="0,4" Radius="12"/>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Grid>
                <VerticalStackLayout Spacing="4">
                    <Label Text="Mis Finanzas" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>
                    <Label Text="Controla tus gastos fácilmente"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Tarjeta de Saldo -->
            <Border Style="{StaticResource CardStyle}"
                    BackgroundColor="{StaticResource Primary}">
                <Border.Shadow>
                    <Shadow Brush="#406366F1" Offset="0,6" Radius="16"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="12">
                    <Label Text="Saldo Total" 
                           TextColor="White" 
                           FontSize="16"
                           Opacity="0.9"/>

                    <Label Text="{Binding TotalBalance, StringFormat='${0:N2}'}" 
                           TextColor="White" 
                           FontSize="40" 
                           FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="*,*" Margin="0,8,0,0">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="⬆" TextColor="White" FontSize="14"/>
                            <Label Text="{Binding TotalIncome, StringFormat='Ingresos: ${0:N2}'}" 
                                   TextColor="White" FontSize="14"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Label Text="⬇" TextColor="White" FontSize="14"/>
                            <Label Text="{Binding TotalExpense, StringFormat='Gastos: ${0:N2}'}" 
                                   TextColor="White" FontSize="14"/>
                        </HorizontalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Ingresos vs Gastos -->
            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="20">

                    <Label Text="Ingresos vs Gastos" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <!-- Ingresos -->
                    <VerticalStackLayout Spacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Ingresos" 
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   FontAttributes="Bold"/>
                            <Label Grid.Column="1" 
                                   Text="{Binding TotalIncome, StringFormat='${0:N2}'}"
                                   TextColor="{StaticResource Success}"
                                   FontSize="15"
                                   FontAttributes="Bold"/>
                        </Grid>

                        <Grid>
                            <Border BackgroundColor="#E2E8F0" HeightRequest="12" StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                            </Border>

                            <Border BackgroundColor="{StaticResource Success}"
                                    HeightRequest="12"
                                    HorizontalOptions="Start"
                                    WidthRequest="{Binding IncomeProgress, Converter={StaticResource DoubleToPercentage}}"
                                    StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                            </Border>
                        </Grid>

                        <Label Text="{Binding IncomeProgress, StringFormat='{0:P0} del total'}" 
                               TextColor="{StaticResource TextSecondary}"
                               FontSize="12"
                               HorizontalOptions="End"/>
                    </VerticalStackLayout>

                    <!-- Gastos -->
                    <VerticalStackLayout Spacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Gastos" 
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   FontAttributes="Bold"/>
                            <Label Grid.Column="1" 
                                   Text="{Binding TotalExpense, StringFormat='${0:N2}'}"
                                   TextColor="{StaticResource Danger}"
                                   FontSize="15"
                                   FontAttributes="Bold"/>
                        </Grid>

                        <Grid>
                            <Border BackgroundColor="#E2E8F0" HeightRequest="12" StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                            </Border>

                            <Border BackgroundColor="{StaticResource Danger}"
                                    HeightRequest="12"
                                    HorizontalOptions="Start"
                                    WidthRequest="{Binding ExpenseProgress, Converter={StaticResource DoubleToPercentage}}"
                                    StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                            </Border>
                        </Grid>

                        <Label Text="{Binding ExpenseProgress, StringFormat='{0:P0} del total'}" 
                               TextColor="{StaticResource TextSecondary}"
                               FontSize="12"
                               HorizontalOptions="End"/>
                    </VerticalStackLayout>

                    <!-- Resumen rápido -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,8,0,0">
                        <Border BackgroundColor="#F0FDF4" Padding="12" StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Ahorro" TextColor="#166534" FontSize="12"/>
                                <Label Text="{Binding TotalBalance, StringFormat='${0:N2}'}" 
                                       TextColor="#166534" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border BackgroundColor="#FEF2F2" Padding="12" StrokeThickness="0" Grid.Column="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Ratio" TextColor="#991B1B" FontSize="12"/>
                                <Label Text="{Binding ExpenseProgress, StringFormat='{0:P0} gastado'}" 
                                       TextColor="#991B1B" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- Botón Agregar -->
            <Button Text="➕ Agregar nueva transacción"
                    Command="{Binding LoadDataCommand}"
                    Clicked="OnAddTransactionClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="30"
                    HeightRequest="56"
                    FontSize="16"
                    FontAttributes="Bold">
                <Button.Shadow>
                    <Shadow Brush="#406366F1" Offset="0,4" Radius="12"/>
                </Button.Shadow>
            </Button>

            <!-- ===== TRANSACCIONES RECIENTES - SIMPLIFICADO ===== -->
            <VerticalStackLayout Spacing="16">

                <Label Text="Transacciones recientes" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimary}"/>

                <CollectionView ItemsSource="{Binding RecentTransactions}" 
                              HeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="{StaticResource Surface}"
                                    StrokeThickness="0"
                                    Margin="0,0,0,8"
                                    Padding="16">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14"/>
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="#10000000" Offset="0,2" Radius="6"/>
                                </Border.Shadow>

                                <Grid ColumnDefinitions="*, Auto">

                                    <!-- SOLO TEXTO: Categoría y fecha -->
                                    <VerticalStackLayout VerticalOptions="Center">
                                        <Label Text="{Binding Category}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextPrimary}"/>
                                        <Label Text="{Binding Date, StringFormat='{0:dd MMM, yyyy}'}" 
                                               FontSize="13" 
                                               TextColor="{StaticResource TextSecondary}"/>
                                    </VerticalStackLayout>

                                    <!-- Monto: Verde si ingreso, Rojo si gasto -->
                                    <Label Grid.Column="1" 
                                           Text="{Binding Amount, StringFormat='${0:F2}'}"
                                           TextColor="{Binding IsIncome, Converter={StaticResource BoolToColor}}"
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <BoxView HeightRequest="20" Color="Transparent"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>